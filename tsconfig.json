{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "rootDirs": ["./src/index.ts", "./lib/**/*.ts"],
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/index.ts"],
  "exclude": [
    "./node_modules",
    "./dist",
    "/src/template-js-vitest",
    "src/template-vanilla",
    "src/template-vanilla-ts",
    "src/ts-bootstrap",
    "src/template-ts-jest",
    "src/template-js-jest",
    "src/ts-minimal",
    "src/ts-router",
    "src/ts-sass",
    "src/ts-tailwindcss",
    "src/ts-unocss",
    "src/ts-uvu",
    "src/ts-vitest",
    "src/ts-windicss",
    "./lib/copy.ts",
    "./lib/frameWorks.ts",
    "./lib/packageName.ts",
    "./lib/pkg.ts",
    "./lib/templates.ts"
  ]
}
